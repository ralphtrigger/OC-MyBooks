{% extends "layout.html.twig" %}

{% block title %}
    {{ book.title }}
{% endblock %}

{% block content %}
    <article>
        <h2>{{ book.title }}</h2>
        <ul>
            <li>Author : {{ book.author.firstname }} {{ book.author.lastname }}</li>
            <li>ISBN : {{ book.isbn }}</li>
        </ul>
        <p>
            {{ book.summary }}
        </p>
    </article>
{% endblock %}
